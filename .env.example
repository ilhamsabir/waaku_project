# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# UUID4 + SHA-512 API Key System
# Raw UUID4 (for client X-API-Key header)
VITE_API_KEY=xxxx
# SHA-512 hash of UUID4 (for server validation)
WAAKU_API_KEY=xxxxx

# Development Configuration
VITE_APP_TITLE=WAAKU
VITE_APP_VERSION=1.0.0

# Server Configuration (for backend)
PORT=3000
FRONTEND_PORT=1100
WAAKU_RUNTIME=linux
# Dev: change VITE_API_DEV_PORT if port 3000 is in use (Vite proxy will follow)
VITE_API_DEV_PORT=3000
# Socket.IO proxy target port (defaults to VITE_API_DEV_PORT)
VITE_SOCKET_PORT=3000
# Comma-separated list of allowed origins for CORS (omit or leave empty to allow all)
CORS_ORIGINS=http://localhost:1100,http://localhost:3000
# Set NODE_ENV=production when running in production
# NODE_ENV=production

VITE_AUTH_USER=admin
VITE_AUTH_PASS=admin
