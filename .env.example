# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# API Key System (Two modes available):

# Option 1: Simple Mode (Recommended for development)
# Use same key for frontend and backend - system will use raw key comparison
VITE_API_KEY=xxxx
# Do NOT set WAAKU_API_KEY when using simple mode

# Option 2: Secure Mode (Production)
# Raw UUID4 (for client X-API-Key header)
# VITE_API_KEY=xxxx
# SHA-512 hash of UUID4 (for server validation)
# WAAKU_API_KEY=xxxxx

# Development Configuration
VITE_APP_TITLE=WAAKU
VITE_APP_VERSION=1.0.0

# Server Configuration (for backend)
PORT=3000
FRONTEND_PORT=1100
WAAKU_RUNTIME=linux
# Dev: change VITE_API_DEV_PORT if port 3000 is in use (Vite proxy will follow)
VITE_API_DEV_PORT=3000
# Socket.IO proxy target port (defaults to VITE_API_DEV_PORT)
VITE_SOCKET_PROXY_PORT=3000

# Webhook Configuration
# URL to send webhook notifications for message replies and incoming messages
WEBHOOK_URL=
# Optional webhook secret for authentication
WEBHOOK_SECRET=

# Chatwoot Integration
# Chatwoot instance URL (e.g., https://app.chatwoot.com)
CHATWOOT_URL=
# Chatwoot API access token
CHATWOOT_TOKEN=
# Chatwoot account ID
ACCOUNT_ID=
# Chatwoot inbox ID for WhatsApp integration
INBOX_ID=
# Chatwoot webhook secret for agent reply integration
# For simplicity, you can use the same value as VITE_API_KEY
# If not set, VITE_API_KEY will be used as fallback
CHATWOOT_WEBHOOK_SECRET=

# Chrome/Chromium Configuration (for macOS users)
# Custom path to Chrome executable (optional, auto-detected by default)
WAAKU_CHROME_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# Comma-separated list of allowed origins for CORS (omit or leave empty to allow all)
CORS_ORIGINS=http://localhost:1100,http://localhost:3000
# Set NODE_ENV=production when running in production
NODE_ENV=production

VITE_AUTH_USER=admin
VITE_AUTH_PASS=admin
